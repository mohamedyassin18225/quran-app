{
    "version": 2,
    "framework": null,
    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.1"
        },
        {
            "src": "icon.png",
            "use": "@vercel/static"
        },
        {
            "src": "manifest.json",
            "use": "@vercel/static"
        },
        {
            "src": "build/**/*.css",
            "use": "@vercel/static"
        },
        {
            "src": "build/**/*.js",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/icon.png",
            "dest": "/icon.png"
        },
        {
            "src": "/manifest.json",
            "dest": "/manifest.json"
        },
        {
            "src": "/build/(.*)",
            "dest": "/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://quran-app-plum-kappa.vercel.app"
    }
}